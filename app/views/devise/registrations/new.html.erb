<h2 class="text-center font-important my-5">Get Started</h2>

<div class="mx-10 my-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'flex flex-col gap-5'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "border px-2 focus:outline-none w-full py-1" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "border px-2 focus:outline-none w-full py-1" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "border px-2 focus:outline-none w-full py-1" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border px-2 focus:outline-none w-full py-1"  %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Sign up" , class: "cursor-pointer w-full bg-red-400 text-white font-bold py-1 hover:bg-black hover:text-red-400"%>
  </div>
<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>

</div>
</div>

