<section class="" id="users">
  <ul class="sm:m-10 m-2 grid grid-cols-1 gap-10">
    <% @users.each do |user|%>
      <li class="user h-full">
        <a href="/users/<%= user.id%>" class="flex h-full gap-7 p-3 hover:bg-slate-300 rounded-lg">
            <div class="max-h-[200px] min-h[100px] min-w-[100px] max-w-[100px] object-cover">
            <img class="rounded-xl max-h-[130px] w-[100px] object-cover" alt="user-<%= user.id%>" src='<%=user.photo%>'>
        </div>
        <div class="col-span-5 flex-1 p-3 flex flex-col gap-2">
            <h2 class="font-important tracking-wider text-lg font-semibold"><%= user.name %></h2>
            <p class="font-type1 max-h-[70px] text-ellipsis break-words"><%= user.bio.truncate(40)%></p>

         <div class="flex justify-between flex-wrap">
               <span>Last seen:<span></span></span>
            <span class="float-left">Total Posts: <span><%= user.posts_counter%></span></span>
            </div>
        </div>
        </a>
      </li>
    <% end %>
  </ul>
</section>
